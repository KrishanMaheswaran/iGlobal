<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="se2203b.iGlobal.ManageUserAccountsController"
            prefHeight="300" prefWidth="400" style="-fx-background-color: #eeeeee;">
    <children>
        <VBox spacing="10" layoutX="20" layoutY="20" prefWidth="360">
            <children>
                <Label text="Manage User Accounts" style="-fx-font-weight: bold; -fx-font-size: 16"/>

                <HBox spacing="10">
                    <children>
                        <Label text="User Account For:"/>
                        <ComboBox fx:id="userAccountCombo" onAction="#handleUserSelection"/>
                    </children>
                </HBox>

                <GridPane hgap="10" vgap="10">
                    <children>
                        <Label text="Email:" GridPane.rowIndex="0"/>
                        <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Username:" GridPane.rowIndex="1"/>
                        <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Password:" GridPane.rowIndex="2"/>
                        <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Confirm Password:" GridPane.rowIndex="3"/>
                        <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="deleteBtn" text="Delete" onAction="#deleteUser"/>
                        <Button fx:id="saveBtn" text="Save" onAction="#saveUser"/>
                        <Button fx:id="cancelBtn" text="Cancel" onAction="#cancel"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
